{
  "name": "kira",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/aabccd021/kira.git"
  },
  "license": "MIT",
  "author": "Muhamad Abdurahman <aabccd021@gmail.com>",
  "main": "./lib/index.js",
  "types": "./lib/index.d.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "doc:generate": "typedoc --out docs src/fields",
    "doc:watch": "typedoc --watch --out docs src/fields",
    "migration-schema:patch": "ts-node src/migration/generate-json-schema.ts --release-type=patch",
    "migration-schema:minor": "ts-node src/migration/generate-json-schema.ts --release-type=minor",
    "migration-schema:major": "ts-node src/migration/generate-json-schema.ts --release-type=major",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint --fix '**/*.ts'",
    "semantic-release": "semantic-release",
    "test": "yarn test:types && mocha -u tdd --require ts-node/register 'test/**/*.test.ts'",
    "test:coverage": "nyc --reporter=json --reporter=text --reporter=text-summary --reporter=lcov yarn test",
    "test:types": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tsc --noEmit",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "filenames",
      "import",
      "lodash",
      "mocha",
      "no-null",
      "only-warn",
      "simple-import-sort",
      "ts-immutable",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:lodash/recommended",
      "plugin:mocha/recommended",
      "plugin:prettier/recommended",
      "plugin:ts-immutable/recommended",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "curly": [
        "warn",
        "multi-line"
      ],
      "eqeqeq": "warn",
      "max-len": [
        "warn",
        {
          "code": 100,
          "comments": 100,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "max-params": [
        "warn",
        3
      ],
      "multiline-comment-style": "warn",
      "no-unused-expressions": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "import/no-cycle": "warn",
      "lodash/chaining": [
        "warn",
        "implicit"
      ],
      "lodash/import-scope": [
        "warn",
        "member"
      ],
      "mocha/no-global-tests": "off",
      "filenames/match-regex": [
        2,
        "^[a-z0-9_.]+$",
        true
      ],
      "filenames/no-index": "warn",
      "no-null/no-null": "warn",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ],
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn",
      "ts-immutable/prefer-readonly-types": "off",
      "unused-imports/no-unused-imports-ts": "warn"
    },
    "ignorePatterns": "lib"
  },
  "dependencies": {
    "dateformat": "^4.5.1",
    "json-stable-stringify": "^1.0.1",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.20",
    "semver": "^7.3.4",
    "ts-json-schema-generator": "^0.83.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/dateformat": "^3.0.1",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.26",
    "@types/semver": "^7.3.4",
    "@types/sinon": "^9.0.10",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.15.0",
    "assert-never": "^1.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-ts-immutable": "^0.3.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.3",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.19",
    "typedoc-plugin-markdown": "^3.4.3",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": "15.6.0",
    "npm": "please-use-yarn"
  },
  "engineStrict": true,
  "release": {
    "branches": [
      "main"
    ]
  }
}
