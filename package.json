{
  "name": "kira",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/aabccd021/kira.git"
  },
  "license": "MIT",
  "author": "Muhamad Abdurahman <aabccd021@gmail.com>",
  "main": "./lib/index.js",
  "types": "./lib/index.d.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint --fix '**/*.ts'",
    "semantic-release": "semantic-release",
    "test": "yarn test:types && mocha --require ts-node/register 'test/**/*.test.ts'",
    "test:coverage": "nyc --reporter=json --reporter=text --reporter=text-summary --reporter=lcov yarn test",
    "test:types": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix; editorconfig-checker",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tsc --noEmit",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120,
          "comments": 120
        }
      ],
      "multiline-comment-style": "error",
      "@typescript-eslint/no-unused-vars": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ],
      "unused-imports/no-unused-imports-ts": "error"
    },
    "ignorePatterns": "lib"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "assert-never": "^1.2.1",
    "chai": "^4.2.0",
    "cz-conventional-changelog": "3.3.0",
    "editorconfig-checker": "^3.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.19",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "15.6.0",
    "npm": "please-use-yarn"
  },
  "engineStrict": true,
  "release": {
    "branches": [
      "main"
    ]
  }
}
