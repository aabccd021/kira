{
  "name": "kira",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/aabccd021/kira.git"
  },
  "license": "MIT",
  "author": "Muhamad Abdurahman <aabccd021@gmail.com>",
  "main": "./lib/index.js",
  "types": "./lib/index.d.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "doc:generate": "typedoc --out docs src/fields",
    "doc:watch": "typedoc --watch --out docs src/fields",
    "migration-schema:patch": "ts-node src/migration/generate-json-schema.ts --release-type=patch",
    "migration-schema:minor": "ts-node src/migration/generate-json-schema.ts --release-type=minor",
    "migration-schema:major": "ts-node src/migration/generate-json-schema.ts --release-type=major",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint --fix '**/*.ts'",
    "semantic-release": "semantic-release",
    "test": "yarn test:types && mocha --require ts-node/register 'test/**/*.test.ts'",
    "test:coverage": "nyc --reporter=json --reporter=text --reporter=text-summary --reporter=lcov yarn test",
    "test:types": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tsc --noEmit",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "ts-immutable",
      "mocha"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "plugin:ts-immutable/recommended",
      "plugin:mocha/recommended"
    ],
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 100,
          "comments": 100
        }
      ],
      "multiline-comment-style": "warn",
      "@typescript-eslint/no-unused-vars": "off",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ],
      "unused-imports/no-unused-imports-ts": "warn",
      "ts-immutable/prefer-readonly-types": "off"
    },
    "ignorePatterns": "lib"
  },
  "dependencies": {
    "dateformat": "^4.5.1",
    "json-stable-stringify": "^1.0.1",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.20",
    "semver": "^7.3.4",
    "ts-json-schema-generator": "^0.83.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/dateformat": "^3.0.1",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.21",
    "@types/semver": "^7.3.4",
    "@types/sinon": "^9.0.10",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.15.0",
    "assert-never": "^1.2.1",
    "chai": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-ts-immutable": "^0.3.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.3",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.19",
    "typedoc-plugin-markdown": "^3.4.3",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "15.6.0",
    "npm": "please-use-yarn"
  },
  "engineStrict": true,
  "release": {
    "branches": [
      "main"
    ]
  }
}
